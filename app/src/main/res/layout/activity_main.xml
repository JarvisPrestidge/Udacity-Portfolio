<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.85">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/main_header_nanodegree"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:textStyle="bold"
            android:id="@+id/header_custom_font"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:baselineAligned="false">

        <!-- Added for button spacing -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            tools:ignore="NestedWeights,UselessLeaf">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/activity_horizontal_margin"
                tools:ignore="UselessParent">


                <Button
                    style="@style/MainButtonStyle"
                    android:id="@+id/main_button_spotify"
                    android:text="@string/main_button_spotify" />

                <Button
                    style="@style/MainButtonStyle"
                    android:id="@+id/main_button_scores"
                    android:text="@string/main_button_scores"/>

                <Button
                    style="@style/MainButtonStyle"
                    android:id="@+id/main_button_library"
                    android:text="@string/main_button_library"/>

                <Button
                    style="@style/MainButtonStyle"
                    android:id="@+id/main_button_build"
                    android:text="@string/main_button_build"/>

                <Button
                    style="@style/MainButtonStyle"
                    android:id="@+id/main_button_xyz"
                    android:text="@string/main_button_xyz"/>

                <Button
                    style="@style/MainButtonStyle"
                    android:id="@+id/main_button_capstone"
                    android:text="@string/main_button_capstone"
                    android:background="#d40040"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

        </RelativeLayout>

        <!-- Added for button spacing -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            tools:ignore="UselessLeaf">
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
